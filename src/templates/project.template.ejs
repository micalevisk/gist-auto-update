const GO_TO_TOP = '[â†¥]';
const elGoToSummary = helpers.formatAsHyperlink(GO_TO_TOP, '#summary');

currId = projectId;
someTaskHasTag = helpers.isSomeTaskHasTag(rootTasks);

const primaryTitle = `${projectName} (${rootTasks.length})`;
-%>
<H1 id="<%= currId %>"><%- elGoToSummary -%> <%- primaryTitle -%></H1>

<table>
  <thead>
    <tr>
      <th align="center">#</th>
      <% if (someTaskHasTag) { -%>
      <th align="center">TAG</th>
      <% }; -%>
      <th align="left">NAME</th>
    </tr>
  </thead>
  <tbody>
    <% rootTasks.forEach(function(task, idx) { -%>
    <%
    const content = task.content;
    const text = content.text;
    -%>
    <tr>
      <td align="center"><%= idx + 1 -%></td>
      <% if (someTaskHasTag) { -%>
      <td align="center"><%= EMOJIS.get(content.tag) -%></td>
      <% } -%>
      <td align="left"><%- helpers.formatAsHyperlink(text, content.link) -%></td>
    </tr>
    <% }); -%>
    <tr>
      <td align="center"><%- helpers.formatAsHyperlink(GO_TO_TOP, '#' + currId) -%></td>
    </tr>
  </tbody>
</table>

