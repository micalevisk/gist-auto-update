{
  "compilerOptions": {
    "outDir": "build/compiled",
    "rootDir": "src",
    "removeComments": true,
    "lib": [
      "esnext"
    ],
    "module": "esnext", // 'CommonJS' is incompatible with Rollup
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "pretty": false,
    "declaration": false,
    "noUnusedParameters": true,
    "noImplicitAny": true
    // "typeRoots" : ["./node_modules/@types", "./src/@types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
